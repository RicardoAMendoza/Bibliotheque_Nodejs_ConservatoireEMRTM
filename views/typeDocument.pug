//-Begin ModalType
.block-edit.modal.fade#blockType
  .modal-dialog.modal-lg.modal-dialog-centered
          .modal-content#ModalType
            .modal-header
              button.close(type="button",data-dismiss="modal") 
                     span(aria-hidden="true") &times;
                     span.sr-only Close
              h3#typeTitle.modal-title Type document
            .modal-body
            .container-fluid
              .row
                  .table#tbtyp_Result
                    table#tableTyp.table.table-hover.table-striped.table-bordered.table-responsive.display
                      thead
                        tr
                          th#tbtypId ID
                          th#tbtypType Type
                          th.hide#tbtypPrenom Prenom
                          th.hide
                      tbody#tbodytypResult
                      a &nbsp; &nbsp; &nbsp;    
              .row
                .col-md-6
                  .form-inline
                    .form-group
                      a &nbsp; &nbsp; &nbsp;
                      label#lbltypId ID :
                  .form-inline
                    .form-group
                      a &nbsp; &nbsp; &nbsp;
                      input.form-control#txttypId(type="text", style='width: 200px;') 
                .col-md-6
                  .form-inline
                    .form-group
                      a &nbsp; &nbsp;
                      label#lbltypType Type :
                  .form-inline
                    .form-group
                      a &nbsp; &nbsp;
                      input.form-control#txttypType(type="text", style='width: 200px;') 
            //-     
                .col-md-4
                  .form-inline
                    .form-group
                      label#lbltypPrenom Prenom :
                  .form-inline
                    .form-group
                      input.form-control#txttypPrenom(type="text", style='width: 200px;') 
              hr
            //-Modal Type
            .modal-footer
                .container
                  .row
                    .col-md-4
                      .form-inline
                        .form-group
                          a &nbsp; &nbsp; &nbsp; &nbsp;
                          button#btntypNouveau.btn.btn-info(onclick="clairtxtBoxType()", type="button", style='width: 150px;') Nouveau
                          a &nbsp; &nbsp; &nbsp; &nbsp;
                          button#btntypSup.btn.btn-info(type="button",style='width: 150px;', onclick="supprimerType()") Supprimer
                    .col-md-4
                      .form-inline
                        .form-group
                          a &nbsp; &nbsp; &nbsp; &nbsp;
                          button#btntypSave.btn.btn-info(type="button",style='width: 150px;', onclick="enregistrerType()") Enregistrer
                          a &nbsp; &nbsp; &nbsp; &nbsp;
                          button#btntypFermer.btn.btn-info(type="button",data-dismiss="modal", style='width: 150px;') Fermer     
                  .row   
                    a &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;     
                  .row 
                    .col-md-4
                      .form-inline
                        .form-group
                          input#chBtypLoop(type="checkbox")
                          a &nbsp; &nbsp; &nbsp;
                          label#lbltypLoop Enregistrer et continuer une nouvelle saisie.
                    .col-md-4
