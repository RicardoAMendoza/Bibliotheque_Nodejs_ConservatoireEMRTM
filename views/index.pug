//-Begin Uploader
doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")

    
    link(rel='stylesheet', href='/stylesheets/styleUpdate.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Raleway', type='text/css')
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
    
    
    title= title
  body#body-Uploader
    .container
        .row
          .col-xs-12
            .panel.panel-default
              .panel-body
                span.glyphicon.glyphicon-cloud-upload
                  h2 File Uploader
                  h4 Conservatoire Culinaire
                  .progress
                    .progress-bar(role="progressbar", style="width: 0%;" ) %0
                  button.btn.btn-lg.upload-btn(type="button")  Upload File
    input#upload-input(type="file" name="uploads[]" multiple="multiple")   

    script(src="https://code.jquery.com/jquery-2.2.0.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js")
    script(src="javascripts/upload.js")           




